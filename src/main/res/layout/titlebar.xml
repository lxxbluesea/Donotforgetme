<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="@dimen/title_heigth"
    android:gravity="center_vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_weight="1">

        <Button
            android:id="@+id/title_btn_return"
            android:layout_margin="@dimen/normalmargin"
            android:layout_width="@dimen/normalwidthheight"
            android:layout_height="@dimen/normalwidthheight"
            android:background="@drawable/return1" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:layout_width="@dimen/normalwidthheight"
                android:layout_height="@dimen/normalwidthheight"
                android:src="@drawable/menu1" />

            <TextView
                android:id="@+id/title_tv_title"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/title_heigth"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@color/select_textColor"
                android:text="@string/app_name"
                android:gravity="center" />
        </LinearLayout>

        <Button
            android:id="@+id/title_btn_menu"
            android:layout_margin="@dimen/normalmargin"
            android:layout_width="@dimen/normalwidthheight"
            android:layout_height="@dimen/normalwidthheight"
            android:background="@drawable/menu1" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/line"
        android:scaleType="fitXY" />
</LinearLayout>
