<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="@dimen/warncontrol_height"
    android:layout_margin="@dimen/warncontrol_margin"
    android:background="@drawable/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/warncontrol_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1."
            android:layout_margin="@dimen/normalmargin" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/warncontrol_tv_warntype"
            android:layout_margin="@dimen/normalmargin" />

        <Spinner
            android:id="@+id/warncontrol_warntype"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/normalmargin"></Spinner>

        <EditText
            android:id="@+id/warncontrol_warndate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="11.17" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/line1"
        android:scaleType="fitXY" />
</LinearLayout>