<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="@dimen/warncontrol_height"
    android:layout_margin="@dimen/warncontrol_margin"
    android:background="@drawable/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/warncontrol_btn_datetime"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/warncontrol_height"
            android:layout_weight="2"
            android:layout_gravity="center_vertical"
            android:gravity="left"
            android:textSize="@dimen/normal_text_size"
            android:background="@drawable/button_selector" />


        <Spinner
            android:id="@+id/warncontrol_sp_warntype"
            android:layout_width="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/spinner"></Spinner>


    </LinearLayout>

</LinearLayout>